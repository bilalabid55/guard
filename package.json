{
  "name": "acsoguard-visitor-management",
  "version": "1.0.0",
  "description": "Construction Site Visitor Management System",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "seed": "node server/seed.js",
    "reset": "npm run seed",
    "start": "node server/index.js",
    "start:prod": "NODE_ENV=production node server/index.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.4",
    "nodemailer": "^6.9.4",
    "@sendgrid/mail": "^7.7.0",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.2",
    "stripe": "^13.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "visitor-management",
    "construction",
    "security",
    "access-control"
  ],
  "author": "AcsoGuard",
  "license": "MIT"
}
