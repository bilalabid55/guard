## Server
PORT=5000
NODE_ENV=production

## Client URL (used for links in emails and CORS)
CLIENT_URL=https://acsoguard.com

## Database
# Use your MongoDB Atlas URI
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority
# Optional local fallback
MONGODB_ALT_URI=mongodb://127.0.0.1:27017/acsoguard

## JWT
JWT_SECRET=replace_with_strong_random_secret
JWT_EXPIRE=7d

## Email (SendGrid SMTP recommended)
# SendGrid SMTP settings:
#   EMAIL_HOST=smtp.sendgrid.net
#   EMAIL_PORT=587
#   EMAIL_USER=apikey
#   EMAIL_PASS=<your SendGrid API Key>
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=
# Visible From address
SENDER_EMAIL=admin@acsoguard.com

## Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

